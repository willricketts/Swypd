<h1>Your Items</h1>
<a href="http://localhost:3000/">Dashboard</a>

<div class="row">
<div class="span10">
<% @items.each do |i| %>
	<hr>
	<ul>
		<li><%= i.name %></li>
		<li><%= i.description %></li>
		<% if i.stolen? %>
			<li style="color: red;"><%= "Stolen" %></li>
		<% end %>
			
		<p><%= link_to "Edit", edit_item_path(i) %></p>
		<p><%= link_to "Delete", i, :confirm => "Are you sure?", :method => :delete %></p>
	</ul>
<% end %>
</div>
<div class="span2"><%= link_to "New Item", new_item_path %></div>
</div>